<?xml version="1.0" encoding="UTF-8"?>
<feature
      id="pingpong.jdt.feature"
      label="PingPong Compiler"
      version="1.0.0.qualifier">

   <description url="http://www.example.com/description">
      This feature checks for correct nullpointer usage in Java classes. The checks are performed as extension to the Java compiler, so there is no need to trigger a command. In order to work, Preferences -&gt; JDT Weaving must be enabled.
   </description>

   <copyright url="http://www.example.com/copyright">
      Copyright 2010
J. Kiegeland
   </copyright>

   <license url="http://www.example.com/license">
      Free for non-commercial use
   </license>

   <includes
         id="org.eclipse.contribution.weaving"
         version="0.0.0"/>

   <includes
         id="org.eclipse.equinox.weaving.sdk"
         version="0.0.0"/>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jdt.core" version="3.5.0" match="greaterOrEqual"/>
      <import plugin="org.aspectj.runtime" version="1.6.5" match="greaterOrEqual"/>
      <import plugin="org.eclipse.jdt.ui" version="3.5.0" match="greaterOrEqual"/>
      <import plugin="pingpong.jdt.core" version="1.0.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.text" version="3.5.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ltk.core.refactoring" version="3.5.0" match="greaterOrEqual"/>
      <import feature="org.eclipse.contribution.weaving" version="2.0.0.e35x-20090624-1600"/>
      <import feature="org.eclipse.equinox.weaving.sdk" version="1.0.0.200906171200"/>
      <import plugin="org.aspectj.weaver"/>
   </requires>

   <plugin
         id="pingpong.jdt.core"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="pingpong.jdt.ui"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

   <plugin
         id="org.aspectj.weaver"
         download-size="0"
         install-size="0"
         version="0.0.0"/>

   <plugin
         id="org.aspectj.runtime"
         download-size="0"
         install-size="0"
         version="0.0.0"/>

</feature>
