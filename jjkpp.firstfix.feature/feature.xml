J. Kiegeland
   </copyright>

   <license url="http://www.example.com/license">
      Free for non-commercial use
   </license>

   <url>
      <update url="http://pingpong.kiegeland.com/3.6/update"/>
   </url>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.jdt.ui"/>
      <import plugin="org.eclipse.jdt.core" version="3.5.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.jface.text" version="3.5.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ui.ide" version="3.5.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.core.resources" version="3.5.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.ltk.core.refactoring" version="3.5.0" match="greaterOrEqual"/>
      <import plugin="org.eclipse.jdt.core.manipulation" version="1.3.0" match="greaterOrEqual"/>
   </requires>

   <plugin
         id="pingpong.firstfix"
         download-size="0"
         install-size="0"
         version="0.0.0"
         unpack="false"/>

</feature>
